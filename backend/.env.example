# Tidal Streamline API Environment Configuration

# Server Configuration
PORT=8008
DEBUG_MODE=true

# Database Configuration (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here

# AI Services
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Vector Store (Pinecone) - Optional
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_environment_here
PINECONE_INDEX_NAME=tidal-market-scans

# Application Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=Tidal Streamline

# Regional Configuration
DEFAULT_REGIONS=["United States", "Philippines", "Latin America", "South Africa"]

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3008", "http://127.0.0.1:3008"]

# Logging
LOG_LEVEL=INFO

# Rate Limiting (Optional)
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# JWT Configuration (Optional for authentication)
# JWT_SECRET_KEY=your_jwt_secret_key_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRE_MINUTES=30